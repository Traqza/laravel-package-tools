{
    "name": "BeyondCode/laravel-package-tools",
    "description": "Useful tools to help you with your next Laravel package.",
    "keywords": [
        "BeyondCode",
        "laravel-package-tools"
    ],
    "homepage": "https://github.com/BeyondCode/laravel-package-tools",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Marcel Pociot",
            "email": "m.pociot@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "illuminate/support": "5.6.*|5.7.*|5.8.*",
        "mnapoli/silly": "^1.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "BeyondCode\\LaravelPackageTools\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BeyondCode\\LaravelPackageTools\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "bin": [
        "pkg-tools"
    ]
}
